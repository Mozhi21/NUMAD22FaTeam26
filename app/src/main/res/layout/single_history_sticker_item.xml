<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:cardCornerRadius="18dp"
            android:elevation="8dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fromWhom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:fontFamily="@font/fuzzybubblesregular"
                        android:text="FromWhom"
                        android:textColor="@color/orange"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/sentAt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:fontFamily="@font/fuzzybubblesregular"
                        android:text="Date"
                        android:textColor="@color/orange"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/isRead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mark as read"
                        android:layout_margin="12sp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/historySticker"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src ="@drawable/c00" />

                <TextView
                    android:id="@+id/messageTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fuzzybubblesbold"
                    android:gravity="left"
                    android:text="Title"
                    android:textSize="10sp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/messageDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fuzzybubblesregular"
                    android:gravity="left"
                    android:text="Detail"
                    android:textSize="10sp"
                    android:layout_marginLeft="10dp"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>
